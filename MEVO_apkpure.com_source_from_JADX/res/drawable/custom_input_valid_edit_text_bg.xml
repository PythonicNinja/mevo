<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#00ffff00" />
                </shape>
            </item>
            <item android:left="-3.0dip" android:top="-3.0dip" android:right="-3.0dip">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="2.0dip" android:color="@color/textBasic2" />
                    <corners android:radius="5.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="false">
        <layer-list
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#00ffff00" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>