<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:id="@+id/scroll_view" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_30" android:layout_marginRight="@dimen/margin_30" android:layout_marginStart="@dimen/margin_30" android:layout_marginEnd="@dimen/margin_30">
            <TextView android:textColor="@color/colorAccent" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="@string/register" style="@style/text_registration_title"/>
            <TextView android:textSize="12sp" android:textColor="@color/colorAccent" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/step_1"/>
            <TextView android:textSize="16sp" android:textColor="@color/colorAccent" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/personal_data"/>
            <LinearLayout android:focusableInTouchMode="true" android:layout_width="0dp" android:layout_height="0dp"/>
            <com.mevo.app.presentation.custom_views.CustomInput android:id="@+id/fragment_register_number_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" app:customInput_background="@drawable/edit_text_bg_grey">
                <android.support.design.widget.TextInputLayout android:id="@+id/text_input_phone" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextInputLayoutBasic">
                    <android.support.design.widget.TextInputEditText android:textColor="@color/textInput" android:id="@+id/fragment_register_number_edit" android:background="@drawable/custom_input_valid_edit_text_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/registration_phone_number_hint" android:maxLines="1" android:inputType="number" android:imeOptions="actionDone"/>
                </android.support.design.widget.TextInputLayout>
            </com.mevo.app.presentation.custom_views.CustomInput>
            <com.mevo.app.presentation.custom_views.CustomInput android:id="@+id/fragment_register_email_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" app:customInput_background="@drawable/edit_text_bg_grey">
                <android.support.design.widget.TextInputLayout android:id="@+id/text_input_email" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextInputLayoutBasic">
                    <android.support.design.widget.TextInputEditText android:textColor="@color/textInput" android:id="@+id/fragment_register_email" android:background="@drawable/custom_input_valid_edit_text_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/registration_email_address_hint" android:maxLines="1" android:imeOptions="actionDone"/>
                </android.support.design.widget.TextInputLayout>
            </com.mevo.app.presentation.custom_views.CustomInput>
            <com.mevo.app.presentation.custom_views.CustomInput android:id="@+id/fragment_register_first_name_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" app:customInput_background="@drawable/edit_text_bg_grey">
                <android.support.design.widget.TextInputLayout android:id="@+id/text_input_first_name" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextInputLayoutBasic">
                    <android.support.design.widget.TextInputEditText android:textColor="@color/textInput" android:id="@+id/fragment_register_first_name" android:background="@drawable/custom_input_valid_edit_text_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/registration_first_name_hint" android:maxLines="1" android:inputType="textCapSentences" android:imeOptions="actionDone"/>
                </android.support.design.widget.TextInputLayout>
            </com.mevo.app.presentation.custom_views.CustomInput>
            <com.mevo.app.presentation.custom_views.CustomInput android:id="@+id/fragment_register_last_name_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" app:customInput_background="@drawable/edit_text_bg_grey">
                <android.support.design.widget.TextInputLayout android:id="@+id/text_input_last_name" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextInputLayoutBasic">
                    <android.support.design.widget.TextInputEditText android:textColor="@color/textInput" android:id="@+id/fragment_register_last_name" android:background="@drawable/custom_input_valid_edit_text_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/registration_last_name_hint" android:maxLines="1" android:inputType="textCapSentences" android:imeOptions="actionDone"/>
                </android.support.design.widget.TextInputLayout>
            </com.mevo.app.presentation.custom_views.CustomInput>
            <com.mevo.app.presentation.custom_views.CustomInput android:id="@+id/fragment_register_street_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" app:customInput_background="@drawable/edit_text_bg_grey">
                <android.support.design.widget.TextInputLayout android:id="@+id/text_input_street" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextInputLayoutBasic">
                    <android.support.design.widget.TextInputEditText android:textColor="@color/textInput" android:id="@+id/fragment_register_street" android:background="@drawable/custom_input_valid_edit_text_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/registration_address_hint" android:maxLines="1" android:inputType="textCapSentences" android:imeOptions="actionDone"/>
                </android.support.design.widget.TextInputLayout>
            </com.mevo.app.presentation.custom_views.CustomInput>
            <com.mevo.app.presentation.custom_views.CustomInput android:id="@+id/fragment_register_zip_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" app:customInput_background="@drawable/edit_text_bg_grey">
                <android.support.design.widget.TextInputLayout android:id="@+id/text_input_zip_code" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextInputLayoutBasic">
                    <android.support.design.widget.TextInputEditText android:textColor="@color/textInput" android:id="@+id/fragment_register_zip_code" android:background="@drawable/custom_input_valid_edit_text_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/registration_zip_code_hint" android:maxLines="1" android:maxLength="6" android:inputType="phone" android:imeOptions="actionDone"/>
                </android.support.design.widget.TextInputLayout>
            </com.mevo.app.presentation.custom_views.CustomInput>
            <com.mevo.app.presentation.custom_views.CustomInput android:id="@+id/fragment_register_city_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" app:customInput_background="@drawable/edit_text_bg_grey">
                <android.support.design.widget.TextInputLayout android:id="@+id/text_input_city" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextInputLayoutBasic">
                    <android.support.design.widget.TextInputEditText android:textColor="@color/textInput" android:id="@+id/fragment_register_city" android:background="@drawable/custom_input_valid_edit_text_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/registration_city_hint" android:maxLines="1" android:inputType="textCapSentences" android:imeOptions="actionDone"/>
                </android.support.design.widget.TextInputLayout>
            </com.mevo.app.presentation.custom_views.CustomInput>
            <com.mevo.app.presentation.custom_views.CustomInput android:id="@+id/fragment_register_country_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" app:customInput_background="@drawable/edit_text_bg_grey">
                <android.support.design.widget.TextInputLayout android:id="@+id/text_input_country" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextInputLayoutBasic">
                    <TextView android:textSize="@dimen/text_size_input_error" android:textColor="@color/hintColor" android:id="@+id/id_text_view" android:paddingLeft="@dimen/margin_medium" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/country_hint" android:paddingStart="@dimen/margin_medium"/>
                    <Spinner android:id="@+id/fragment_register_country_spinner" android:background="@drawable/custom_input_valid_edit_text_bg" android:paddingLeft="@dimen/space_mini" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/registration_country_hint"/>
                </android.support.design.widget.TextInputLayout>
                <TextView android:textColor="@color/textColorError" android:id="@+id/spinner_validator_text" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/minus_padding_spinner"/>
            </com.mevo.app.presentation.custom_views.CustomInput>
            <com.mevo.app.presentation.custom_views.CustomInput android:id="@+id/fragment_register_pesel_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" app:customInput_background="@drawable/edit_text_bg_grey">
                <android.support.design.widget.TextInputLayout android:id="@+id/text_input_pesel" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextInputLayoutBasic">
                    <android.support.design.widget.TextInputEditText android:textColor="@color/textInput" android:id="@+id/fragment_register_pesel" android:background="@drawable/custom_input_valid_edit_text_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/registration_pesel_hint" android:maxLines="1" android:inputType="number" android:imeOptions="actionDone"/>
                </android.support.design.widget.TextInputLayout>
            </com.mevo.app.presentation.custom_views.CustomInput>
            <android.support.v7.widget.AppCompatButton android:id="@+id/fragment_register_step_one_keep_going_button" android:layout_width="match_parent" android:layout_height="@dimen/button_height" android:layout_marginTop="8dp" android:layout_marginBottom="25dp" android:text="@string/keep_going" style="@style/buttonBlue"/>
            <TextView android:textSize="12sp" android:textColor="@color/hintTextColor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:text="@string/fill_this_fields"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
