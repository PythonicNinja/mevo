<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:scrollbars="none" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:background="@color/backgroundLightBlue" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/textStationMain" android:layout_gravity="center" android:id="@+id/navigation_drawer_username" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="13sp" android:textColor="@color/textGreyMedium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/account_status_2"/>
                <LinearLayout android:id="@+id/navigation_drawer_refresh" android:paddingLeft="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="13sp" android:textColor="@color/red" android:id="@+id/navigation_drawer_account_balance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:fontFamily="@font/roboto_medium" android:layout_marginStart="2dp"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/button_refresh" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginLeft="@dimen/margin_small" android:src="@drawable/button_refresh" android:layout_marginStart="@dimen/margin_small"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:textSize="13sp" android:textColor="@color/redButton" android:gravity="center" android:id="@+id/view_navigation_drawer_account_inactive" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/account_inactive"/>
            <TextView android:textSize="13sp" android:textColor="@color/textColorToastSuccess" android:gravity="center" android:id="@+id/view_navigation_drawer_account_active" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/account_active"/>
            <TextView android:textSize="13sp" android:textColor="@color/textGreyMedium" android:gravity="center_horizontal" android:id="@+id/view_navigation_drawer_current_subscription" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:paddingStart="16dp" android:paddingEnd="16dp"/>
            <TextView android:textSize="13sp" android:textColor="@color/textGreyMedium" android:gravity="center_horizontal" android:id="@+id/view_navigation_drawer_current_subscription_end_date" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="16dp" android:paddingEnd="16dp"/>
            <TextView android:textSize="13sp" android:textColor="@color/textGreyMedium" android:gravity="center_horizontal" android:id="@+id/view_navigation_drawer_current_subscription_minutes" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:paddingStart="16dp" android:paddingEnd="16dp"/>
            <android.support.v7.widget.AppCompatButton android:id="@+id/navigation_drawer_top_up_acc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/basic_header_height" android:layout_marginTop="16dp" android:layout_marginRight="@dimen/basic_header_height" android:layout_marginBottom="@dimen/dialog_padding" android:text="@string/top_up" android:layout_marginStart="@dimen/basic_header_height" android:layout_marginEnd="@dimen/basic_header_height" style="@style/buttonRed"/>
        </LinearLayout>
        <com.mevo.app.presentation.custom_views.ListViewPlus android:id="@+id/navigation_drawer_menu_list" android:scrollbars="none" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@null" android:overScrollMode="never"/>
    </LinearLayout>
</ScrollView>
