<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_weight="8" android:layout_marginEnd="12dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/list_item_station_bike_status" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginRight="@dimen/space_mini" android:src="@drawable/active_renting" android:scaleType="fitCenter" android:layout_marginEnd="@dimen/space_mini"/>
            <TextView android:id="@+id/list_item_station_bike_name_number" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/RegularTextStyleX"/>
        </LinearLayout>
        <TextView android:textColor="@color/textStationLightBlue" android:id="@+id/list_item_station_bike_distance" android:layout_width="wrap_content" android:layout_height="match_parent" style="@style/RegularTextStyleX"/>
        <TextView android:id="@+id/list_item_station_bike_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:fontFamily="@font/roboto_regular" style="@style/darkGreyBlue50TextStyleX"/>
    </LinearLayout>
</LinearLayout>
