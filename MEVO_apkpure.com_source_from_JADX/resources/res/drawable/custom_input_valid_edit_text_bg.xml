<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#00ffff00"/>
                </shape>
            </item>
            <item android:left="-3dp" android:top="-3dp" android:right="-3dp">
                <shape>
                    <solid android:color="@android:color/transparent"/>
                    <stroke android:width="2dp" android:color="@color/textBasic2"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#00ffff00"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
