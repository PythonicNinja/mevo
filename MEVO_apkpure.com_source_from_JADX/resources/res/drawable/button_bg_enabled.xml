<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/cornerRadiusButton"/>
            <solid android:color="@color/base_button"/>
            <stroke android:width="1dp" android:color="@color/base_button"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/cornerRadiusButton"/>
            <solid android:color="@color/base_button_clicked"/>
            <stroke android:width="1dp" android:color="@color/base_button"/>
        </shape>
    </item>
</selector>
